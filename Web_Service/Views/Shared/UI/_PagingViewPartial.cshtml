@using Web_Service.ViewModels.Common
@model PagingViewPartialViewModel

<div class="row">
    <div class="col-md-2">
        <div class="">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="页数" ng-model="@HttpUtility.HtmlDecode(Model.PageID.Equals("") ? "formData.paging.pageNumber" : Model.PageID + ".formData.paging.pageNumber")">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="button" ng-click="@HttpUtility.HtmlDecode(Model.PageID + "GoPageEvent()")">Go!</button>
                </span>
            </div>
        </div>
    </div>
    <div class="col-md-10">
        <div class="form-group">
            <div class="btn-toolbar" role="toolbar" aria-label="Paging">
                <div class="btn-group" role="group" aria-label="Previous">
                    <button type="button" class="btn btn-default" ng-click="@HttpUtility.HtmlDecode(Model.PageID + "GoFirstPageEvent()")">@HttpUtility.HtmlDecode("&#xf100;")</button>
                    <button type="button" class="btn btn-default" ng-click="@HttpUtility.HtmlDecode(Model.PageID + "GoPrevPageEvent()")">@HttpUtility.HtmlDecode("&#xf104;")</button>
                </div>
                <div class="btn-group" role="group" aria-label="Pages">
                    <button type="button" class="btn btn-default {{page.isActive}}" ng-repeat="page in @HttpUtility.HtmlDecode(Model.PageID.Equals("") ? "formData.paging.pages" : Model.PageID + ".formData.paging.pages")" ng-click="@HttpUtility.HtmlDecode(Model.PageID + "GoPageEvent()")" ng-bind="page.pageNumber"></button>
                </div>
                <div class="btn-group" role="group" aria-label="Next">
                    <button type="button" class="btn btn-default" ng-click="@HttpUtility.HtmlDecode(Model.PageID + "GoNextPageEvent()")">@HttpUtility.HtmlDecode("&#xf105;")</button>
                    <button type="button" class="btn btn-default" ng-click="@HttpUtility.HtmlDecode(Model.PageID + "GoEndPageEvent()")">@HttpUtility.HtmlDecode("&#xf101;")</button>
                </div>
                <label style="float: right;">    总页数<em style="font-style: inherit;" ng-bind="@HttpUtility.HtmlDecode(Model.PageID.Equals("") ? "formData.paging.dataAllPageCountFormatter" : Model.PageID + ".formData.paging.dataAllPageCountFormatter")"></em>页</label>
                <label style="float: right;">总记录<em style="font-style: inherit;" ng-bind="@HttpUtility.HtmlDecode(Model.PageID.Equals("") ? "formData.paging.dataCountFormatter" : Model.PageID + ".formData.paging.dataCountFormatter")"></em>条</label>
            </div>
        </div>
    </div>
</div>
